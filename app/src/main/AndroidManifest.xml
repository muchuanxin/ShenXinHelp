        android:theme="@style/AppTheme">
        <activity
            android:name=".com.xd.shenxinhelp.ui.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.xd.shenxinhelp.ui.ContainerActivity"
            android:label="@string/title_activity_container"
            android:theme="@style/AppTheme" />
        <activity android:name=".com.xd.shenxinhelp.ui.FirstLoginActivity" />
        <activity
            android:name=".com.xd.shenxinhelp.ui.BodyHelpActivity"
            android:label="@string/title_activity_body_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".com.xd.shenxinhelp.ui.EyeHelpActivity"
            android:label="@string/title_activity_eye_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".com.xd.shenxinhelp.ui.MentalityActivity"
            android:label="@string/title_activity_mentality"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".com.xd.shenxinhelp.ui.ExamHelpActivity"
            android:label="@string/title_activity_exam"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".com.xd.shenxinhelp.ui.HelpContentActivity" />
        <activity
            android:name=".com.xd.shenxinhelp.ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".group.RankActivity"
            android:label="@string/title_activity_body_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".group.GroupDetailActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".group.MyPlanActivity"
            android:label="@string/title_activity_body_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".group.MakePlanActivity"
            android:label="@string/title_activity_body_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>


    </application>

</manifest>